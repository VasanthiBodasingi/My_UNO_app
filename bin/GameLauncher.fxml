<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="gameLauncher" prefHeight="680.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <ImageView fx:id="deckView" fitHeight="90.0" fitWidth="57.0" layoutX="747.0" layoutY="253.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="discardPileView" fitHeight="90.0" fitWidth="57.0" layoutX="577.0" layoutY="253.0" pickOnBounds="true" preserveRatio="true" />
      <Circle fx:id="declareNextColorCircle" fill="DODGERBLUE" layoutX="692.0" layoutY="298.0" radius="17.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
      <Label fx:id="declareNextColorLabel" layoutX="655.0" layoutY="253.0" text="Desired Color:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <ImageView fx:id="declareNextColorImage" fitHeight="40.0" fitWidth="40.0" layoutX="672.0" layoutY="278.0" pickOnBounds="true" preserveRatio="true" />
      <HBox fx:id="information" alignment="CENTER" layoutX="507.0" layoutY="640.0" prefHeight="25.0" prefWidth="338.0">
         <children>
            <Label fx:id="informationLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="255.0" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Button fx:id="informationButton" mnemonicParsing="false" text="OK">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="challengeLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="597.0" layoutY="352.0" prefHeight="17.0" prefWidth="190.0" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="gameDirectionImage1" fitHeight="60.0" fitWidth="60.0" layoutX="380.0" layoutY="182.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="gameDirectionImage2" fitHeight="60.0" fitWidth="60.0" layoutX="900.0" layoutY="182.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="gameDirectionImage3" fitHeight="60.0" fitWidth="60.0" layoutX="900.0" layoutY="382.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="gameDirectionImage4" fitHeight="60.0" fitWidth="60.0" layoutX="380.0" layoutY="382.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="player3Label" alignment="CENTER" contentDisplay="CENTER" layoutX="640.0" layoutY="490.0" prefHeight="19.0" prefWidth="106.0" text="Player 3" textAlignment="CENTER" >
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="player2Label" alignment="CENTER" contentDisplay="CENTER" layoutX="1130.0" layoutY="100.0" prefHeight="19.0" prefWidth="106.0" text="Player 2" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label fx:id="player1Label" alignment="CENTER" contentDisplay="CENTER" layoutX="640.0" layoutY="38.0" prefHeight="19.0" prefWidth="106.0" text="Player 1" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Button fx:id="callUno" layoutX="35.0" layoutY="630.0" mnemonicParsing="false" text="UNO">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="home" layoutX="30.0" layoutY="30.0" mnemonicParsing="false" text="Home">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <ImageView fx:id="welcomeLogo" fitHeight="160.0" fitWidth="175.0" layoutX="570.0" layoutY="190.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/images/icon.png" />
         </image>
      </ImageView>
      <Label fx:id="welcomeLabel" layoutX="530.0" layoutY="385.0" text="Welcome to UNO!">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Button fx:id="buttonNewGame" layoutX="600.0" layoutY="500.0" mnemonicParsing="false" onAction="#startGame" text="New Game">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
